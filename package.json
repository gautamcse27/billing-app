{
  "name": "raju-generator-billing",
  "version": "1.0.0",
  "description": "Raju Generator Billing (CGST/SGST/IGST, multi-page A4 invoice)",
  "main": "electron/main.js",
  "author": "Gautam Kumar",
  "license": "MIT",

  "scripts": {
    "dev": "concurrently -k \"npm:dev:react\" \"npm:dev:electron\"",

    "dev:react": "vite",
    "dev:electron": "wait-on tcp:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron .",

    "build:react": "vite build",

 
    "build:win": "npm run build:react && electron-builder -w",
    "build:mac": "npm run build:react && electron-builder -m",
    "build": "npm run build:react && electron-builder -mw"
  },

  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.1",
    "electron-is-dev": "^2.0.0"
   
  },

  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.0.0",
    "concurrently": "^8.0.0",
    "wait-on": "^7.0.0",
    "cross-env": "^7.0.0",
    "vite": "^5.0.0"
  
  },

 
  "build": {
    "appId": "com.raju.generator.billing",
    "productName": "Raju Generator Billing",
    "files": [
      "dist/**",
      "electron/**/*"
    ],

   

    "directories": {
      "buildResources": "build",
      "output": "release"
    },

    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.business",
      "artifactName": "RajuGeneratorBilling-${version}-mac.${ext}"
    },

    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "artifactName": "RajuGeneratorBillingSetup-${version}.exe"
    },

    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
